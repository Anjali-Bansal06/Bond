# Port for backend (Render will inject their own)
PORT=5000

# MongoDB Atlas connection URI
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/bond?retryWrites=true&w=majority

# Secret key for JWT (replace with a long random string in .env)
JWT_SECRET=change-me-to-a-long-random-string

# Frontend URL (Vercel deployment or localhost for dev)
CLIENT_URL=http://localhost:5173
